{
  // Color scheme
  "theme": {
    "mode": "system",
    "dark": "Gruvbox Dark",
    "light": "Gruvbox Light"
  },
  // Terminal
  "terminal": {
    "alternate_scroll": "off",
    "blinking": "terminal_controlled",
    "copy_on_select": false,
    "env": {},
    "font_family": "Maple Mono NF",
    "font_features": null,
    "font_size": 13,
    "option_as_meta": false,
    "button": true,
    "shell": {},
    "toolbar": {
      "title": true
    },
    "working_directory": "current_project_directory"
  },
  // Disable Github Copilot
  "features": {
    "copilot": false
  },
  // Font
  "ui_font_size": 15,
  "buffer_font_size": 14,
  "buffer_font_family": "Maple Mono NF",
  // Auto save/formatter
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "format_on_save": "on",
  "formatter": "language_server",
  // Update
  "auto_update": false,
  //Telemetry
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  }
}
